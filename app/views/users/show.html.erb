<div>
  <aside>
    <div>
      <h3><%= @user.name %></h3>
    </div>
    <div>
      <img src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
    </div>
  </aside>
  <div>
    <ul>
      <li><a href="<%= user_path(@user) %>" class="<%= 'active' if current_page?(user_path(@user)) %>">Tasklist <span><%= @count_tasks %></span></a></li>
      <li><a href="#">Followings</a></li>
      <li><a href="#">Followers</a></li>
    </ul>
    <%= render 'tasks/tasks', tasks: @tasks %>
  </div>
</div>